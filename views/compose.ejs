<%- include("partials/header") -%>


<h1>Compose.</h1>



<form action="/compose" method="post">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input type="text" name="composeInputTitle" class="form-control" id="inputTitle" a placeholder="Enter Title">
      </div>

      <div class="form-group">
        <label for="inputPost">Post</label>
        <textarea class="form-control" name ="composeInputPost" rows="5" a placeholder="Enter Your Post here"></textarea>
      </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>



